# Bunnings Sandbox API Credentials
# Get these from: https://developer.bunnings.com.au/
BUNNINGS_CLIENT_ID=your_client_id_here
BUNNINGS_CLIENT_SECRET=your_client_secret_here
BUNNINGS_API_BASE_URL=https://connect.api.bunnings.com.au/connect/token

# Anthropic Claude API (for AI-powered custom job analysis)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Firebase Configuration
# Get from Firebase Console → Project Settings → Your apps → Web app
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=1:your_app_id:web:your_web_app_id

# Stripe Configuration
# Get from: https://dashboard.stripe.com/apikeys
# Toggle between 'test' and 'live' mode
STRIPE_MODE=test

# TEST/SANDBOX Keys (get from Stripe Dashboard in Test mode)
STRIPE_TEST_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_TEST_SECRET_KEY=sk_test_your_secret_key
STRIPE_TEST_MONTHLY_PRICE=price_test_monthly_id
STRIPE_TEST_YEARLY_PRICE=price_test_yearly_id

# LIVE/PRODUCTION Keys (get from Stripe Dashboard in Live mode)
STRIPE_LIVE_PUBLISHABLE_KEY=pk_live_your_publishable_key
STRIPE_LIVE_SECRET_KEY=sk_live_your_secret_key
STRIPE_LIVE_MONTHLY_PRICE=price_live_monthly_id
STRIPE_LIVE_YEARLY_PRICE=price_live_yearly_id

# Webhook Secret (set after creating webhooks)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Backend API URL
# For Firebase Functions: https://us-central1-YOUR_PROJECT_ID.cloudfunctions.net
API_BASE_URL=https://us-central1-your_project.cloudfunctions.net
