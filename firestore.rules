rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated and owns the resource
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users collection - each user has their own data
    match /users/{userId} {
      // User can only access their own data
      allow read, write: if isOwner(userId);

      // Quotes subcollection
      match /quotes/{quoteId} {
        allow read, write: if isOwner(userId);
      }

      // Settings subcollection
      match /settings/{settingId} {
        allow read, write: if isOwner(userId);
      }

      // Profile subcollection
      match /profile/{profileId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Subscriptions collection (used by Stripe webhooks and subscription sync)
    match /subscriptions/{userId} {
      // Users can read their own subscription
      allow read: if isOwner(userId);
      // Only backend (admin/Cloud Functions) can write subscription data
      allow write: if false;
    }

    // Default: deny all access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
